// Firebase Storage Security Rules
// Copy these rules to your Firebase Console -> Storage -> Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can only manage their own
    match /profile-images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 && // 5MB limit for profile pics
        request.resource.contentType.matches('image/.*');
    }

    // Pickup/delivery photos - authenticated users can read/write
    match /photos/{requestId}/{photoType}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*') &&
        photoType in ['pickup', 'delivery', 'pickup-confirmation', 'delivery-confirmation'];
    }
  }
}